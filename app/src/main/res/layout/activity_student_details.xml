                            android:layout_height="240dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:src="@color/black" />
                        <!--android:background="@color/black"-->

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
