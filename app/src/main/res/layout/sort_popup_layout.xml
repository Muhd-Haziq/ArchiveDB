<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@drawable/blank_task"
    android:layout_marginLeft="10dp"
    android:layout_gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvSortText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp">


        <RadioGroup
            android:id="@+id/rgCharaType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioSortAll"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/sort_all_on"
                android:checked="true"
                android:button="@android:color/transparent"/>

            <RadioButton
                android:id="@+id/radioSortStriker"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/sort_striker_off"
                android:button="@android:color/transparent"/>

            <RadioButton
                android:id="@+id/radioSortSpecial"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/sort_special_off"
                android:button="@android:color/transparent"/>

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSortCancel"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_cancel"
            android:text="Cancel"
            android:layout_margin="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSortSave"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_ok"
            android:text="OK"
            android:layout_margin="10dp"/>

    </LinearLayout>


</RelativeLayout>